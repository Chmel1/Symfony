
<form method="post" action="{{ path('app_book_delete', {'id': book.id}) }}" onsubmit="return confirm('Удалить книгу?');" class="{{ formClass|default('d-inline') }}">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
    <input type = "hidden" name="_method" value="DELETE">
    <button class="btn btn-danger  {{ buttonClass|default('') }}">Удалить</button>
</form>