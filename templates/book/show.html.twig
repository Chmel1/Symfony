{% extends 'base.html.twig' %}

{% block title %}Книга{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center">Книга</h1>

    <div class="row">
        <div class="col-md-4">
            {% if book.coverImage %}
                <img src="{{asset('uploads/' ~ book.coverImage) }}" 
                    alt="Обложка книги" 
                    class="img-fluid rounded shadow">
                {% else %}
                    <p>Обложка не добавлена</p>
            {% endif %}
        </div>
    
        <div class="col-md-6">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Название</th>
                        <td>{{ book.title }}</td>
                    </tr>
                    <tr>
                        <th>Описание</th>
                        <td>{{ book.description }}</td>
                    </tr>
                    <tr>
                        <th>Год публикации</th>
                        <td>{{ book.publicationYear }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="d-flex justify-content-between mt-4">
                {# Кнопка "Изменить" — адаптивная и будет находиться рядом с кнопкой удаления #}
                <a class="btn btn-primary" href="{{ path('app_book_edit', {'id': book.id}) }}">Изменить</a>
                
                {# Кнопка "Удалить" — адаптивная и будет находиться рядом с кнопкой "Изменить" #}
                <div>
                    {{ include('book/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
